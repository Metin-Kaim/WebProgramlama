@model Barinak.Models.Siniflar.VMLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Ekranı</title>
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Giriş Yap</h1>
        <input type="email" placeholder="Mail Adresi" asp-for="Email" />
        <input type="password" placeholder="Şifre" asp-for="Password" />
        <br /><br />
        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Unutma Beni
        </label><br /><br />
        <button type="submit">Giriş</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }

    </form>
</body>
</html>
