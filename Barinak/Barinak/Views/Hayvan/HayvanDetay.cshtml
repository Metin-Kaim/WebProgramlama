    <!--end slider -->

</head>
<body>
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">

                <div class="single-grid">
                    <img src="@Model.FotoUrl" alt="" style="height:450px;width:650px;" />
                    <p><b>Adi: @Model.Adi</b></p>
                    <p><b>Yaş:</b> @Model.Yas</p>
                    <p><b>Cinsiyet:</b> @Model.Cinsiyet</p>
                    <p><b>Açıklama:</b> @Model.Aciklama</p>
                    <br />
                    <a href="/Hayvan/HayvanSahiplen/@Model.ID" class="btn btn-info">Sahiplen</a>

                </div>


            </div>


            <div class="clearfix"></div>
        </div>
    </div>
