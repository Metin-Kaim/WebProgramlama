            <div class="con-right">
                <div class="grid1-l-img">
                    <img src="~/web/images/contact.png" alt="">
                </div>
                <div class="grid1-l-desc">
                    <p>Telefon : +90 555 555 5555</p>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="header-bottom">
        <div class="wrap">
            <ul id="nav">
                <li><a href="/Default/Index/">Ana Sayfa</a></li>
                <li>
                    <a class="hsubs" href="/Hayvan/Index/">Hayvanlar</a>
                    <ul class="subs">
                        <li><a href="/Hayvan/SeciliHayvan/1">Köpekler</a></li>
                        <li><a href="/Hayvan/SeciliHayvan/2">Kediler</a></li>
                        <li><a href="/Hayvan/SeciliHayvan/3">Kuşlar</a></li>
                    </ul>
                </li>
                <li><a class="hsubs" href="/Blog/Index/">Bakım Rehberi</a></li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Default" asp-action="LogOut">Log Out</a>
                </li>
            </ul>
        </div>
    </div>
    <div class"content">
        @RenderBody()
    </div>
    <div class="footer-bottom">
        <div class="wrap">
            <div class="copy">
                <p>&copy; 2023 Hayvan Barınağı. Tüm hakları Saklıdır </a></p>
            </div>
        </div>
    </div>
</body>
</html>
